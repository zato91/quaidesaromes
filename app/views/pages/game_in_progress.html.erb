                    <% if gip.user.picture %>
                    <img src="<%= gip.user.picture %>" alt="user" class="avatar-large">
                    <% end %>
                  <!-- <div class="game-card-color"> -->
                    <%# if gip.wine.color.capitalize == "Rouge" %>
                      <!-- <div class="game-dot dot-red"></div> -->
                    <%# elsif gip.wine.color.capitalize == "Blanc" %>
                      <!-- <div class="game-dot dot-white"></div> -->
                    <%# else %>
                      <!-- <div class="game-dot dot-pink"></div> -->
                    <%# end %>
                  <!-- </div> -->
                  </div>
                </div>
                <figcaption>
                  <div class="game-card">
                    <div class="game-card-content">
                      <h3><%= gip.game.wine.label %></h3>
                      <h4><%= gip.game.wine.region %>, <%= gip.game.wine.country.capitalize %></h4>
                      <p><%= gip.game.wine.vintage %></p>
                    </div>
                    <div class="game-card-content-left">
                      <h4>
                      <% if gip.user.first_name %>
                        <%= gip.user.first_name.downcase.capitalize %>
                      <% else %>
