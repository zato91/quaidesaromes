<%= render 'pro_radar_chart' %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 full-size-container">
      <div class='suspect-card-container'>
        <div class='suspect-card'>
          <div class="suspect-card-body">
            <div class='suspect-card-header' style='background-image: url("<%= cl_image_path(@suspect.suspect.photo_freaky.path) %>")'>
            </div>
            <div class="suspect-card-title text-center">
              <h4 class="font-courier font-upper">Suspect n°<%= @suspect.position.to_s %></h4>
              <h3 class="font-impact"><%= @suspect.suspect.name %></h3>
            </div>
            <div class="color-aroma text-center">
              <div class="color-aroma-item red-list">
                <ul class="list-unstyled">
                  <li class="font-courier font-upper">
                    Ta dégustation
                  </li>
                  <li class="font-bold">
                    <%= @tasting_color %>, <%= @aromas_family %>
                  </li>
                </ul>
              </div>
              <div class="color-aroma-item blue-list">
                <ul class="list-unstyled">
                  <li class="font-courier font-upper">
                    Vin du coupable
                  </li>
                  <li class="font-bold">
                    <%= @game_guilty.wine.tasting_color %>, <%= Aroma.where(id: @game_guilty.aroma_id).first.name %>
                  </li>
                </ul>
              </div>
            </div>
            <canvas id="radarChart1" class="canvas-card"></canvas>
            <%= link_to 'Dégustation du vin suivant', play_wine_game_user_game_user_session_path(@game_user.wine, @game_user, @game_user_session, question_position: (params[:question_position].to_i + 1).to_s), class: 'suspect-card-bottom' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

