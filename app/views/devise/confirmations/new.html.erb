<div class="home-banner">
  <div class="sign-content">
    <div class="sign-content-white">
      <h3>RENVOYER CONFIRMATION</h3>

      <%= simple_form_for(resource, as: resource_name, url: user_confirmation_path, html: { method: :post }, defaults: { input_html: { class: "modal-input" } }) do |f| %>
        <%= f.error_notification %>
        <%= f.full_error :confirmation_token %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, label: "Email :" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envoyer", class: "sign-btn" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
