<div class="home-banner">
  <div class="sign-content">
      <div class="sign-content-white">
        <h3>IDENTIFICATION</h3>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: "modal-input" } }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, label: "Email :" %>
            <%= f.input :password, required: false, label: "Mot de passe :" %>
            <%= f.input :remember_me, label: "Rester connectÃ©(e)", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "#{@label="Connexion"}", class: "sign-btn" %>
          </div>
        <% end %>
      <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
