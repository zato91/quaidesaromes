<div class="home-banner">
  <div class="sign-content">
      <div class="sign-content-white">
      <h3>Mot de passe oubliÃ© ?</h3>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, defaults: { input_html: { class: "modal-input" } }) do |f| %>
        <%= f.error_notification %>


        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, label: "Email :" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "J'adore m'envoyer des mails!", class: "sign-btn" %>
          <% @label = "Connexion" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
