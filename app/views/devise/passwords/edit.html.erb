<div class="home-banner">
  <div class="sign-content">
      <div class="sign-content-white">
      <h3>CHANGER LE MOT DE PASSE</h3>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, defaults: { input_html: { class: "modal-input" } }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password, label: "Nouveau mot de passe :", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: "Mot de passe :" %>
          <%= f.input :password_confirmation, label: "Confirmer le nouveau mot de passe :", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envoyer", class: "sign-btn" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
